---
import { basics } from '@cv';

interface Props {
  title: string;
}


const { image } = basics;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Felipe Arce - Desarrollador FullStack MERN | Portfolio</title>
    <meta name="description" content="Desarrollador web y estudiante Técnico Universitario en Programación, con experiencia en React, Node.js, MongoDB y tecnologías modernas. Especializado en desarrollo frontend y backend con un año de experiencia profesional." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preload critical resources -->
    <link rel="preload" as="image" href={image} />
    <link rel="preload" as="image" href="/portada.png" />
    <link rel="preconnect" href="https://res.cloudinary.com" />
    <link rel="dns-prefetch" href="https://res.cloudinary.com" />
    
    <meta name="google-site-verification" content="jfdI3O_sVUKVWOWPcViT3dZF-JayDl6N87uwcqGkXXU" />
    
    <!-- Facebook Meta Tags / Open Graph (usado por WhatsApp, LinkedIn, etc) -->
    <meta property="og:url" content="https://www.arceprog.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Felipe Arce - Desarrollador FullStack MERN" />
    <meta property="og:description" content="Desarrollador web y estudiante Técnico Universitario en Programación, con experiencia en React, Node.js, MongoDB y tecnologías modernas. Especializado en desarrollo frontend y backend." />
    <meta property="og:site_name" content="Felipe Arce Portfolio" />
    <meta property="og:image" content="https://www.arceprog.dev/portada.png" />
    <meta property="og:image:secure_url" content="https://www.arceprog.dev/portada.png" />
    <meta property="og:image:alt" content="Felipe Arce - Desarrollador FullStack MERN | Portfolio y CV" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_AR" />
    
    <!-- Meta tags adicionales para WhatsApp -->
    <meta property="og:updated_time" content="2025-07-20T19:00:00Z" />
    <meta name="robots" content="index, follow" />
    <meta name="referrer" content="origin-when-cross-origin" />

    <meta http-equiv="content-language" content="es" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@arceprog" />
    <meta name="twitter:creator" content="@arceprog" />
    <meta property="twitter:domain" content="arceprog.dev" />
    <meta property="twitter:url" content="https://www.arceprog.dev" />
    <meta name="twitter:title" content="Felipe Arce - Desarrollador FullStack MERN" />
    <meta name="twitter:description" content="Desarrollador web especializado en React, Node.js y MongoDB. Portfolio con proyectos y experiencia en desarrollo frontend y backend." />
    <meta name="twitter:image" content="https://www.arceprog.dev/portada.png" />
    <meta name="twitter:image:alt" content="Felipe Arce - Desarrollador FullStack MERN | Portfolio y CV" />
    
    <!-- WhatsApp Meta Tags específicos -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:secure_url" content="https://www.arceprog.dev/portada.png" />
    
    <!-- Asegurar que WhatsApp pueda acceder -->
    <meta name="format-detection" content="telephone=no" />
    
    <!-- LinkedIn Meta Tags (usa Open Graph principalmente) -->
    <!-- Ya están definidas arriba en og: tags -->
    
    <!-- Telegram Meta Tags (usa Open Graph) -->
    <!-- Ya están definidas arriba en og: tags -->
    
    <!-- Discord Meta Tags (usa Open Graph) -->
    <meta name="theme-color" content="#121a2b" />

    <meta
      name="keywords"
      content="Felipe Arce, desarrollador fullstack, desarrollador MERN, React, Node.js, MongoDB, Express, JavaScript, TypeScript, portfolio developer, programador web, frontend developer, backend developer, Buenos Aires, Argentina"
    />

    <meta name="author" content="Felipe Arce" />
    <meta name="google" content="nositelinkssearchbox" />
    
    <!-- Structured Data for better social sharing -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Felipe Arce",
        "jobTitle": "Desarrollador FullStack MERN",
        "url": "https://www.arceprog.dev",
        "image": "https://www.arceprog.dev/portada.png",
        "description": "Desarrollador web y estudiante Técnico Universitario en Programación, con experiencia en React, Node.js, MongoDB y tecnologías modernas. Especializado en desarrollo frontend y backend con un año de experiencia profesional.",
        "knowsAbout": ["JavaScript", "React", "Node.js", "MongoDB", "Express", "HTML", "CSS", "TypeScript", "Git", "Tailwind CSS"],
        "alumniOf": {
          "@type": "EducationalOrganization",
          "name": "Universidad Tecnológica Nacional",
          "sameAs": "https://www.utn.edu.ar/"
        },
        "worksFor": {
          "@type": "Organization",
          "name": "America Virtual"
        },
        "sameAs": [
          "https://www.linkedin.com/in/felipe-arce-programador/",
          "https://github.com/arceprogramando",
          "https://twitter.com/arceprog"
        ]
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      'Courier New',
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
    scroll-behavior: smooth;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
    contain: layout style paint;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  p {
    color: #444;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
