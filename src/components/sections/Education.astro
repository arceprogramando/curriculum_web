---
import Section from '../Section.astro';
import { getCV, getUI, type Locale } from '@/lib/i18n';

interface Props {
  locale?: Locale;
}

interface Certificate {
  url: string | null;
  area: string;
  description: string;
  startDate: string;
  endDate: string | null;
  score: string | null;
  courses: string[];
}

interface EducationEntry {
  institution: string;
  certificates: Certificate[];
}

const { locale = 'es' } = Astro.props;
const cv = getCV(locale);
const ui = getUI(locale);
const education = cv.education as EducationEntry[];
---

<Section title={ui.education}>
  <ul>
    {
      education.map(({ institution, certificates }) => (
        <li>
          <div class="institucion">
            <h3>{institution}</h3>
          </div>
          <ul>
            {certificates.map(
              ({ startDate, endDate, area, url, description }) => {
                const startYear = startDate.split('-')[0];
                const endYear = endDate != null ? endDate.split('-')[0] : ui.current;
                const years = `${startYear} - ${endYear}`;

                return (
                  <li>
                    <article>
                      <header>
                        <div>
                          {url ? (
                            <a
                              href={url}
                              target="_blank"
                              rel="noopener noreferrer"
                            >
                              {area}
                            </a>
                          ) : (
                            <span>{area}</span>
                          )}
                        </div>
                        <time>{years}</time>
                      </header>

                      <footer>
                        <p>{description}</p>
                      </footer>
                    </article>
                  </li>
                );
              }
            )}
          </ul>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  li a:hover {
    text-decoration: underline;
    cursor: pointer;
  }

  li span {
    color: inherit;
    font-weight: inherit;
  }

  @media (width <= 700px) {
    li a {
      text-decoration: underline;
    }
  }

  article h3 {
    font-weight: 500;
    color: var(--color-text-dark);
    font-size: 1.0rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer p {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    max-width: 600px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  .institucion {
    display: inline-block;
    background-color: var(--color-bg-badge);
    color: white;
    margin-bottom: 1rem;
    padding: 0.4rem 0.7rem;
  }

  .institucion h3,
  h3 {
    display: inline-block;
    font-size: 1.1rem;
  }
</style>
