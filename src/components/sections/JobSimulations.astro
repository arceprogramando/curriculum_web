---
import Section from '../Section.astro';
import { getCV, getUI, type Locale } from '@/lib/i18n';

interface Props {
  locale?: Locale;
}

interface SimulationProject {
  name: string;
  url: string;
  description: string;
  startDate: string;
  endDate: string | null;
}

interface JobSimulation {
  simulationName: string;
  isActive: boolean;
  description: string;
  highlights: string[];
  projects: SimulationProject[];
}

const { locale = 'es' } = Astro.props;
const cv = getCV(locale);
const ui = getUI(locale);
const jobSimulations = cv.jobSimulations as JobSimulation[];
---

<Section title={ui.jobSimulations}>
  <ul>
    {
      jobSimulations.map(({ simulationName, description, projects }) => (
        <li>
          <div class="simulacion">
            <h3>{simulationName}</h3>
          </div>
          <p>{description}</p>
          <ul>
            {projects.map(({ name: projectName, url }) => {
              return (
                <li>
                  <a href={url} target="_blank" rel="noopener noreferrer">
                    {projectName}
                  </a>
                </li>
              );
            })}
          </ul>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  li a {
    text-decoration: underline;
  }

  li a:hover {
    color: blue;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    max-width: 600px;
  }

  .simulacion {
    display: inline-block;
    background-color: var(--color-bg-badge);
    color: white;
    margin-bottom: 1rem;
    padding: 0.4rem 0.7rem;
  }

  h3 {
    display: inline-block;
    font-size: 1.1rem;
  }

  a {
    margin-top: px;
  }
</style>
