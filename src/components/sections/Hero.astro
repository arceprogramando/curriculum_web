---
import { Image } from 'astro:assets';
import Section from '@/components/Section.astro';
import Mail from '@/icons/Mail.astro';
import Phone from '@/icons/Phone.astro';
import X from '@/icons/X.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import GitHub from '@/icons/GitHub.astro';
import WorldMap from '@/icons/WorldMap.astro';
import Download from '@/icons/Download.astro';
import type { SocialIcon } from '@/types';
import Skills from './Skills.astro';
import { getCV, getUI, getLocaleConfig, type Locale } from '@/lib/i18n';

interface Props {
  locale?: Locale;
}

interface Profile {
  network: string;
  username: string;
  url: string;
}

const { locale = 'es' } = Astro.props;
const cv = getCV(locale);
const ui = getUI(locale);
const config = getLocaleConfig(locale);

const { name, label, image, location, phone, email } = cv.basics;
const profiles = cv.basics.profiles as Profile[];
const { city, region } = location;

const currentDate = new Date();
const currentYear = currentDate.getFullYear();

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
};

const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn');
const linkedUrl = linkedInfo?.url;

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(' • ');

// Mensaje de WhatsApp según idioma
const whatsappMessage = locale === 'es'
  ? '¡Hola! Me interesa contactarte para conversar acerca de tu experiencia profesional.'
  : 'Hi! I\'m interested in contacting you to discuss your professional experience.';
---

<Section>
  <div class="container">
    <div class="info">
      <div class="name">
        <h1>{name}</h1>
      </div>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>

      <footer class="print">
        {printInfo}
      </footer>
      <footer class="no-print">
        {
          email && (
            <a href={`mailto:${email}`} title={`${ui.sendEmail} ${name}`} target="_blank" rel="noopener noreferrer">
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a href={`https://wa.me/${phone.replace(/\D/g, '')}?text=${encodeURIComponent(whatsappMessage)}`} title={`${ui.sendWhatsApp} ${name}`} target="_blank" rel="noopener noreferrer">
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a href={url} title={`${ui.visitProfile} ${network}`} target="_blank" rel="noopener noreferrer">
                <Icon />
              </a>
            );
          })
        }

        <a
          href={config.pdfFile}
          download={`Felipe_Arce_CV_${currentYear}.pdf`}
          title={ui.downloadCV}
        >
          <Download />
        </a>
      </footer>
    </div>
    <figure>
      <Image
        src={image}
        alt={name}
        loading="eager"
        decoding="async"
        width={128}
        height={128}
        format="webp"
        quality={85}
      />
    </figure>
  </div>
  <div class="skills-section">
    <Skills locale={locale} />
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.5rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  .name {
    background-color: var(--color-bg-dark);
    color: var(--color-text-inverted);
    text-align: center;
    padding: 0.3rem 0.6rem;
  }
  h1 {
    font-size: 2.2rem;
    text-transform: uppercase;
  }

  h2 {
    font-weight: 500;
    font-size: 1.2rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    height: 128px;
    border-radius: 16px;
    will-change: transform;
    transform: translateZ(0);
  }

  .skills-section {
    contain: layout style paint;
  }

  span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: var(--color-text-black);
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: var(--color-text-black);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border-primary);
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: var(--color-button-bg);
    border: 1px solid var(--color-button-border);
  }

  /* En móviles, subrayado visible para accesibilidad */
  @media (width <= 700px) {
    footer a {
      text-decoration: underline;
    }
    
    h1 {
      font-size: 1.3rem;
      font-weight: 600;
    }
    .container {
      flex-direction: column-reverse;
      padding: 0;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>
