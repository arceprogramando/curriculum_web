---
import Section from '../Section.astro';
import { getCV, getUI, type Locale } from '@/lib/i18n';

interface Props {
  locale?: Locale;
}

interface WorkExperience {
  name: string;
  position: string;
  url: string;
  startDate: string;
  endDate: string | null;
  summary: string;
}

const { locale = 'es' } = Astro.props;
const cv = getCV(locale);
const ui = getUI(locale);
const work = cv.work as WorkExperience[];
---

<Section title={ui.workExperience}>
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        const startYear = startDate.split('-')[0];
        const endYear = endDate != null ? endDate.split('-')[0] : ui.current;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`${ui.visit} ${name}`} target="_blank">
                      {name}
                    </a>
                  </h3>
                  <h4>{position}</h4>
                </div>

                <div>
                  <time datetime={startDate} data-title={startDate}>
                    {startYear}
                  </time>
                  {' - '}
                  <time datetime={endDate} data-title={endDate}>
                    {endYear}
                  </time>
                </div>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    margin: 16px 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  h3 {
    padding-bottom: 4px;
  }

  article h3 {
    font-weight: 600;
    color: var(--color-text-dark);
    font-size: 1.1rem;
  }

  article a {
    color: var(--color-text-dark);
  }

  article a:hover {
    text-decoration: underline;
  }

  /* En m√≥viles, siempre mostrar subrayado en enlaces */
  @media (width <= 700px) {
    article a {
      text-decoration: underline;
    }
    
    time {
      text-align: right;
    }
  }
</style>
